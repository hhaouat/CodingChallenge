<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codingchallenge" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".core.ui.user.UserActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".core.ui.user.UserDetails"
            android:label="@string/title_activity_user_details"
            >
        </activity>

        <activity
            android:name=".core.ui.album.AlbumActivity"
            android:label="@string/title_activity_album_list"
            >
        </activity>
        <activity
            android:name=".core.ui.photo.PhotoActivity"
            android:label="@string/title_activity_photo_list"
            >
        </activity>
    </application>

</manifest>
